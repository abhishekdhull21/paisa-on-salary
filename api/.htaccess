<IfModule mod_headers.c>
    # Match allowed origins (salaryontime.com domains and localhost with any port)
    SetEnvIf Origin "^https?://(valueleaf\.salaryontime\.com|salaryontime\.com)$" AccessControlAllowOrigin=$0
    SetEnvIf Origin "^https?://localhost(:[0-9]+)?$" AccessControlAllowOrigin=$0

    # Allow CORS from matching origins
    Header always set Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
    Header always set Access-Control-Allow-Credentials "true" env=AccessControlAllowOrigin
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE" env=AccessControlAllowOrigin
    Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization" env=AccessControlAllowOrigin
    Header always set Access-Control-Max-Age "86400" env=AccessControlAllowOrigin
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow preflight OPTIONS request to pass through
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]

    # Route to index.php if file/folder doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
